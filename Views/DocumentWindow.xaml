<UserControl x:Class="FikusIn.Views.DocumentWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FikusIn.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             SizeChanged="UserControl_SizeChanged"
             Loaded="UserControl_Loaded"
>
    <Grid Margin="0" x:Name="gridMain">
        <!--3D graphics-->
        <Grid x:Name="gridD3D"
              Margin="0"
              MouseWheel="Window_MouseWheel"
              Background="Black"
              SizeChanged="Window_SizeChanged"
              MouseEnter="gridD3D_MouseEnter"
              MouseLeave="gridD3D_MouseLeave">
            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="{Binding WindowScaleInverted}"
                                ScaleY="{Binding WindowScaleInverted}"
                                CenterX=".5"
                                CenterY=".5" />
            </Grid.LayoutTransform>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard Timeline.DesiredFrameRate="60">
                            <DoubleAnimation From="1.0"
                                             To="0.999"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="gridD3D"
                                             Duration="0:0:1"
                                             AutoReverse="True"
                                             RepeatBehavior="Forever" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Grid.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard Timeline.DesiredFrameRate="1">
                            <DoubleAnimation From="1.0"
                                             To="0.999"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="gridD3D"
                                             Duration="0:0:1"
                                             AutoReverse="False"
                                             RepeatBehavior="1x" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <!-- Selection box -->
            <Canvas Height="Auto"
                    Width="Auto"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    MouseWheel="Window_MouseWheel">
                <Rectangle x:Name="canvasSelectionBox"
                           Stroke="White"
                           StrokeThickness="1"
                           StrokeDashArray="2 2"
                           Visibility="Collapsed">
                </Rectangle>
            </Canvas>
        </Grid>

        <!--Floating main operation menu-->
        <DockPanel x:Name="pnlMenu"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Height="70"
                   Width="Auto"
                   Margin="0,0,10,10">
            <Button x:Name="btnMenu"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Style="{StaticResource MenuButtons}"
                    MouseEnter="btnMenu_MouseEnter"
                    Click="btnMenu_Click">
                <TextBlock Text="☰"
                           FontWeight="Bold"
                           Margin="0,-5,0,0"
                           FontSize="34" />
            </Button>

            <StackPanel x:Name="pnlSubMenu"
                        Margin="0"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Height="70"
                        Width="Auto"
                        Orientation="Horizontal">
                <Button Style="{StaticResource MenuButtons}"
                        ToolTip="New"
                        >
                    <TextBlock Text="📄"
                               Margin="0,1,0,0"
                               FontFamily="Consolas"
                               FontSize="32" />
                </Button>
                <Button x:Name="btnXXX"
                        Style="{StaticResource MenuButtons}"
                        ToolTip="Open">
                    <TextBlock Text="📂"
                               Margin="2,-3,0,0"
                               FontFamily="Consolas"
                               FontSize="36" />
                </Button>
                <Button x:Name="btnKKK"
                        Style="{StaticResource MenuButtons}"
                        ToolTip="Save">
                    <TextBlock Text="💾"
                               Margin="0,1,0,0"
                               FontFamily="Consolas"
                               FontSize="32" />
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
